<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.login.LoginFragment" android:background="#05053D" android:backgroundTint="#05053D">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/main_logo" android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/LoginEmail" android:layout_marginBottom="10dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/LoginEmail"
            android:background="@color/white"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintBottom_toTopOf="@+id/LoginPassword"
            android:hint="Email" android:textColorHint="#54D0B4"
            android:textColor="#54D0B4" android:textSize="15dp"
            android:layout_marginBottom="10dp" android:layout_marginEnd="30dp" android:layout_marginStart="30dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:textSize="15dp"
            android:padding="10dp"
            android:id="@+id/LoginPassword"
            android:background="@color/white"
            android:hint="Password" android:textColorHint="#54D0B4"
            android:textColor="#54D0B4"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="284dp"
            android:minHeight="48dp" app:layout_constraintEnd_toEndOf="@+id/LoginEmail"
            app:layout_constraintStart_toStartOf="@+id/LoginEmail"/>

    <Button
            android:text="LogÄ±n"
            android:layout_width="110dp"
            android:backgroundTint="#54D0B4"
            android:layout_height="45dp" android:id="@+id/LoginLoginButton"
            app:layout_constraintEnd_toEndOf="@+id/LoginPassword"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="161dp"
            app:layout_constraintTop_toBottomOf="@+id/LoginPassword"/>
    <Button
            android:text="REGISTER"
            android:layout_width="110dp"
            android:backgroundTint="#54D0B4"
            android:layout_height="45dp" android:id="@+id/LoginRegisterButton"
            app:layout_constraintStart_toStartOf="@+id/LoginPassword"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="161dp"
            app:layout_constraintTop_toBottomOf="@+id/LoginPassword"/>
    <TextView
            android:text="Forgot Password?"
            android:layout_width="117dp"
            android:layout_height="19dp" android:id="@+id/LoginForgotPassword"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/LoginLoginButton" android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="@+id/LoginLoginButton"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="285dp">

    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>