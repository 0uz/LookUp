<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#05053D" android:backgroundTint="#05053D">
    <ImageView
            android:layout_width="436dp"
            android:layout_height="276dp" app:srcCompat="@drawable/main_logo" android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"/>
    <EditText
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/LoginEmail"
            android:background="@color/white"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintBottom_toTopOf="@+id/LoginPassword"
            android:hint="Email" android:textColorHint="#54D0B4"
            android:textColor="#54D0B4" android:textSize="15dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.803"/>
    <EditText
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:ems="10"
            android:textSize="15dp"
            android:padding="10dp"
            android:id="@+id/LoginPassword"
            android:background="@color/white"
            android:hint="Password" android:textColorHint="#54D0B4"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2" android:textColor="#54D0B4"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="284dp"/>

    <Button
            android:text="Forgot Password?"
            android:layout_width="104dp"
            android:layout_height="27dp"
            android:textSize="6sp"
            android:backgroundTint="#05053D" app:layout_constraintEnd_toEndOf="@+id/LoginPassword"
            app:layout_constraintTop_toBottomOf="@+id/LoginPassword" android:layout_marginTop="8dp"
            android:onClick="forgotPasswordView" android:id="@+id/LoginForgotpassword"/>

    <Button
            android:text="LogÄ±n"
            android:layout_width="110dp"
            android:backgroundTint="#54D0B4"
            android:layout_height="45dp" android:id="@+id/LoginLoginButton"
            app:layout_constraintEnd_toEndOf="@+id/LoginPassword"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="161dp"
            app:layout_constraintTop_toBottomOf="@+id/LoginPassword"/>
    <Button
            android:text="REGISTER"
            android:layout_width="110dp"
            android:backgroundTint="#54D0B4"
            android:layout_height="45dp" android:id="@+id/LoginRegisterButton"
            app:layout_constraintStart_toStartOf="@+id/LoginPassword"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="161dp"
            app:layout_constraintTop_toBottomOf="@+id/LoginPassword" android:onClick="registerView"/>
</androidx.constraintlayout.widget.ConstraintLayout>