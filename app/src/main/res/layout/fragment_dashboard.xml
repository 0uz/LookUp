<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.DashboardFragment" android:background="@color/mainScreenColor">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/searchView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView">
        <TextView
                android:text="Coin"
                android:layout_width="187dp"
                android:layout_height="wrap_content" android:id="@+id/coinTextView3" android:textColor="#ECECEC"
                android:textSize="18sp"
                android:layout_margin="10dp"
        />
        <TextView
                android:text="Price"
                android:layout_width="174dp"
                android:layout_height="wrap_content" android:id="@+id/priceTextView3"
                android:textColor="#FFFFFF" android:textSize="18sp"
                android:layout_margin="10dp"
                android:gravity="right"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="410dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#1A1A45" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/recyclerView"
            android:layout_height="530dp"
            android:layout_marginBottom="4dp"/>
    <TextView
            android:text="Prices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:textColor="#FFFFFF" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.046"/>
    <SearchView
            android:layout_width="370dp"
            android:layout_height="36dp"
            android:id="@+id/searchView" app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginTop="16dp" android:background="#FFFFFF" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.487">
    </SearchView>


</androidx.constraintlayout.widget.ConstraintLayout>