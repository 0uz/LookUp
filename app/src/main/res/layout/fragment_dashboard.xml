<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.DashboardFragment" android:background="@color/mainScreenColor">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/searchView">
        <TextView
                android:text="Subscribed Coins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:textColor="#ECECEC"/>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollviewSubscribed"
        >
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/recyclerViewSubscribed"/>
        </ScrollView>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2"
        >
            <TextView
                    android:text="Coin"
                    android:layout_width="187dp"
                    android:layout_height="wrap_content" android:id="@+id/coinTextView3" android:textColor="#ECECEC"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
            />
            <TextView
                    android:text="Price"
                    android:layout_width="174dp"
                    android:layout_height="wrap_content" android:id="@+id/priceTextView3"
                    android:textColor="#FFFFFF" android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:gravity="right"/>
        </LinearLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrolviewDashview"
                android:visibility="visible">
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:background="#1A1A45"
                    android:id="@+id/recyclerViewCoins"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp" android:visibility="visible" android:layout_marginTop="10dp"
            />
        </ScrollView>
    </LinearLayout>
    <TextView
            android:text="Prices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:textColor="#FFFFFF" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.046"/>
    <SearchView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/searchView" app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginTop="16dp" android:background="#FFFFFF" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.487"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
    </SearchView>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dashboardPB"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" android:visibility="visible"/>


</androidx.constraintlayout.widget.ConstraintLayout>